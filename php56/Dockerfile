FROM alpine:3.6

LABEL Maintainer="Jan Ritter <git@janrtr.de>" \
      Description="Docker base image optimized for Symfony running apache2, php5.6 with composer, phpunit and xdebug"

RUN apk --no-cache add apache2 \
    apache2-ssl \
    php5-apache2 \
    openssl \
    php \
    php5-common \
	  php5-fpm \
	  php5-phar \
	  php5-pdo \
	  php5-json \
    php5-openssl \
    php5-mysql \
    php5-pdo_mysql \
    php5-mcrypt \
    php5-opcache \
    php5-sqlite3 \
    php5-pdo_sqlite \
    php5-ctype \
    php5-zlib \
    php5-curl \
    php5-gd \
    php5-xml \
    php5-dom \
    php5-openssl \
    php5-soap \
    php5-dev \
    php5-phar \
    php5-cli \
    supervisor \
    tar \
    php5-pear \
    tzdata \
    git \
    curl \
    autoconf \
    gcc \
    g++ \
    zlib-dev \
    file \
    libc-dev  \
    make pkgconf \
    tar \
    tzdata \
    libmemcached-dev \
    git \
    libmemcached \
    openssl \
    curl

# Apache2 required folder to write the pid
RUN mkdir -p /run/apache2

#Edit apache config
RUN sed -i 's#^DocumentRoot ".*#DocumentRoot "/var/www/html/web"#g' /etc/apache2/httpd.conf && \
    sed -i 's#AllowOverride [Nn]one#AllowOverride All#' /etc/apache2/httpd.conf && \
    sed -i 's/^#ServerName.*/ServerName webproxy/' /etc/apache2/httpd.conf && \
	sed -i 's/#LoadModule rewrite_module/LoadModule rewrite_module/g' /etc/apache2/httpd.conf && \
    sed -i 's#PidFile "/run/.*#Pidfile "/var/www/run/httpd.pid"#g'  /etc/apache2/conf.d/mpm.conf && \
    sed -i 's#Directory "/var/www/localhost/htdocs.*#Directory "/var/www/html" >#g' /etc/apache2/httpd.conf && \
    sed -i 's#Directory "/var/www/localhost/cgi-bin.*#Directory "/var/www/cgi-bin" >#g' /etc/apache2/httpd.conf && \
	sed -i 's#ErrorLog logs/error.log #ErrorLog /dev/stderr#g' /etc/apache2/httpd.conf && \
    mkdir -p /var/www/html/web && \
    echo "<?php echo 'Hello World from PHP'; ?>" >> /var/www/html/web/index.php

RUN chown -R apache.www-data /var/www

#Symlink php5 to php
RUN ln -s /usr/bin/php5 /usr/bin/php

# Configure supervisord
COPY config/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Add Composer
RUN curl -sS https://getcomposer.org/installer | php && mv composer.phar /usr/local/bin/composer

# Add phpunit
RUN wget https://phar.phpunit.de/phpunit-5.7.9.phar
RUN mv phpunit-5.7.9.phar phpunit.phar && chmod +x phpunit.phar
RUN mv phpunit.phar /usr/local/bin/phpunit

#Fix pecl command error
RUN sed -i "$ s|\-n||g" /usr/bin/pecl

RUN pecl install xdebug-2.5.5

# Add xdebug
RUN echo "zend_extension=$(find /usr/lib/php5/modules/ -name xdebug.so)" >> /etc/php5/php.ini \
    && echo "xdebug.remote_enable=on" >> /etc/php5/php.ini \
    && echo "xdebug.remote_handler=dbgp" >> /etc/php5/php.ini \
    && echo "xdebug.remote_connect_back=1" >> /etc/php5/php.ini \
    && echo "xdebug.remote_autostart=on" >> /etc/php5/php.ini \
    && echo "xdebug.idekey=\"PHPSTORM\"" >> /etc/php5/php.ini \
    && echo "xdebug.remote_port=9000" >> /etc/php5/php.ini

EXPOSE 80 443 9000
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]

